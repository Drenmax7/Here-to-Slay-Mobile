<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur de fond du Spinner -->
    <solid android:color="@color/edittext_background" /> <!-- Utilisez la couleur que vous souhaitez -->

    <!-- Coins arrondis -->
    <corners android:radius="16dp" /> <!-- Ajustez le rayon selon vos préférences -->

    <!-- Optionnel : Ajouter un contour autour du Spinner -->
    <stroke
        android:width="1dp"
        android:color="@color/divider" /> <!-- Contour gris clair -->

    <!-- Optionnel : Ajouter un padding interne -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>
